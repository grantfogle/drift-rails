<div class="h-full rounded-xl container flex flex-col bg-white px-6 py-6">
    <h1 class="text-center text-blue-500 mb-3">Welcome to Drift</h1>
    <h2 class="text-center text-gray-600 font-medium m-0 mb-3">Find your next place to fish</h2>
    <h3 class="text-center underline">Sign up</h3>

<%= form_with model: @user, url: sign_up_path do |form| %>
    <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
            <% @user.errors.full_messages.each do |message| %>
                <div class="text-red"><%= message %></div>
            <% end %>
        </div>
    <% end %>
    <section class="container flex flex-col rounded px-4">
        <div class="border-gray-300 px-2 py-2 flex flex-col">
            <%= form.label :email %>
            <%= form.email_field :email, placeholder: "steve@apple.com", class: "rounded-md bg-gray-100" %>
        </div>

        <div class="border-gray-300 px-2 py-2 flex flex-col">
            <%= form.label :password %>
            <%= form.password_field :password, placeholder: "password", class: "rounded-md bg-gray-100" %>
        </div>

        <div class="border-gray-300 px-2 py-2 flex flex-col">
            <%= form.label :password_confirmation, "Confirm Password" %>
            <%= form.password_field :password_confirmation, placeholder: "password", class: "rounded-md bg-gray-100" %>
        </div>

        <div class="mx-2 my-2 text-center">
            <%= form.submit "Sign up", class: "w-64 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>    
        </div>
        <a class="text-center no-underline text-blue-500 hover:text-blue-700" href="#">Log In</a>
    </section>
<% end %>

</div>