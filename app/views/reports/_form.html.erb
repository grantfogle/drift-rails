<%= form_with model: [@flow, @flow.reports.build ] do |form| %>
    <p>
        <%= form.label :author %><br>
        <%= form.text_field :author %>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </p>
    <p>
        <%= form.label :rating %><br>
        <%= form.number_field :rating %>
    </p>
    <p class="mb-4">
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </p>

    <div>
        <%= form.submit class: "bg-blue-500 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded" %>
    </div>
<% end %>
