<section class="relative overflow-x-auto">
    <table class="table-auto w-full">
        <thead class="bg-gray-50 border-b-2 border-gray-200 h-[60px] font-bold sticky top-0">
            <td class="px-4 text-center">Favorite</td>
            <td class="px-4">Stream</td>
            <td class="px-4">Watershed</td>
            <td class="px-4">State</td>
            <td class="px-4">Flow (cfs)</td>
        </thead>

        <tbody id="streams-table">
            <% streams.each do |stream| %>
                <tr class="odd:bg-white even:bg-slate-50">
                    <td class="px-4 py-4 text-center text-yellow-500">
                        <i class="fa-regular fa-star fa-xl text-yellow-500"></i>
                    </td>
                    <td class="px-4 py-4 align-middle flex flex-col"><span class="font-semibold text-lg"><%= stream.stream_name %></span> <span class="text-sm"><%= stream.location %></span></td>
                    <td class="px-4 py-4 align-middle text-lg"><%= stream.watershed %></td>
                    <td class="px-4 py-4 align-middle text-lg"><%= stream.state %></td>
                    <td class="px-4 py-4 align-right text-lg">126</td>
                </tr>
            <% end %>
        </tbody>
    </table>
</section>