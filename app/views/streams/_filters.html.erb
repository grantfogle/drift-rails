
<section>
    <!-- On small screen center the buttons -->
    <% if current_user %>
        <div class="flex space-x-2">
            <%= button_tag "All Streams",
                class: "px-4 py-2 #{@view_type == 'all' ? 'border-b-4 border-yellow-500' : ''}",
                data: { reflex: "click->StreamReflex#switch_view", view: "all" }
            %>
            <%= button_tag "Favorites",
                class: "px-4 py-2 #{@view_type == 'favorites' ? 'border-b-4 border-yellow-500' : ''}",
                data: {  reflex: "click->StreamReflex#switch_view", view: "favorites" }
            %>
        </div>
    <% end %>
</section>

<div class="p-4">
    <div class="relative">
        <%= text_field_tag :query,
            params[:query],
            data: { 
                reflex: "input->StreamReflex#search",
                reflex_dataset: "typed"
            },
            placeholder: "Search",
            class: "w-full text-lg pl-8 pr-2 py-2 border-2 border-gray-200 rounded-lg bg-gray-50 focus:outline-none"
        %>
        <i class="fa-solid fa-search text-lg absolute left-2 top-1/2 transform -translate-y-1/2"></i>
    </div>

    <!-- FILTERS ( STATES, WATERSHEDS, FLOW STATUS) -->
</div>