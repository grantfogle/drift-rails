    <% streams.each do |stream| %>
        <div class="py-4 px-4 my-4 mx-4 border rounded-xl flex justify-between items-center odd:bg-white even:bg-gray-50">
            <span class="flex items-center">
            
            <span data-id="favorite_stream_<%= stream.id %>_card">
                <%= render "components/buttons/favorite", 
                stream: stream,
                current_user: current_user, 
                is_favorited: current_user&.favorited_streams&.include?(stream) %>
            </span>
            <span class="flex flex-col mx-4">
                <span class="text-md font-semibold">
                    <%= stream.stream_name %>    
                </span>
                
                <span class="text-sm"><%= stream.location %>, <%= stream.state %></span>
            </span>
        </span>
        <span class="whitespace-nowrap"><td class="px-4 py-4 align-right text-lg"><%= stream.stream_flows.last.flow_rate %> cfs</td></span>
    </div>
<% end %>