<div class="container mx-auto max-w-[800px]">
    <div class="flex justify-between items-center mx-4">
        <h1 class="font-semibold text-2xl">Streams</h1>
        <h2 class="font-semibold md:text-xl hidden md:block">
            Current Flow (CFS)
        </h2>
        <h2 class="font-semibold md:text-xl block md:hidden">
            CFS
        </h2>
    </div>
    <% @streams.each do |stream| %>
        <div class="py-2 px-4 my-2 mx-4 border rounded flex justify-between items-center">
            <span class="flex flex-col">
                <span class="text-sm font-semibold">
                    <%= stream.stream_name %>
                    <%= stream.location %>
                </span>
                <span class="text-xs"><%= stream.watershed %>, <%= stream.state %></span>
            </span>
            <span>126</span>
        </div>
    <% end %>
</div>
