<!-- Update streams with constants for view_type -->
<%
def view_button_class(current_view, target_view)
  base_classes = "px-4 py-2 border-b-2"
  if current_view == target_view
    "#{base_classes} border-yellow-500 font-semibold"
  else
    "#{base_classes} border-transparent hover:border-gray-400 hover:font-semibold"
  end
end
%>

<%= button_tag "All Streams",
    class: view_button_class(view_type, 'all'),
    data: { reflex: "click->StreamReflex#switch_view", view: "all" }
%>
<%= button_tag "Favorites",
    class: view_button_class(view_type, 'favorites'),
    data: { reflex: "click->StreamReflex#switch_view", view: "favorites" }
%>