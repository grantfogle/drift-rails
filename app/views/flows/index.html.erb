<div class="container mx-auto flex flex-col">
<h1>Stream Flows</h1>

<% if @user %>
    Logged in as: <%= @user.email %>


    <%= link_to "Log out", logout_path, method: :delete %>
    <%= button_to "Log out", logout_path, method: :delete, class: "w-64 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>

<h4>Our page has <%= Flow.public_count %> public streams and counting!</h4>

<table class="table-auto">
    <thead>
        <td>River</td>
        <td>Location</td>
        <td>Flow</td>
    </thead>
    <% @flows.each do |flow| %>
        <tr>
            <td><%= flow.name %></td>
            <td><%= flow.location %></td>
            <td><%= flow.flow %></td>
        </tr>
    <% end %>
</table>
<hr>

<ul>
    <% @flows.each do |flow| %>
        <% unless flow.archived? %>
            <li>
                <%= link_to flow.name, flow %>
            </li>
        <% end %>
    <% end %>
</ul>

<%= link_to "New Stream Flow", new_flow_path %>
</div>