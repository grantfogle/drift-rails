            'geometry': {
                'type': 'Point',
                'coordinates': [-105.782, 39.55]
            },
            'properties': {
                'title': 'Mapbox',
                'description': 'Washington, D.C.'
            }
        }
    });

    map.addSource('fly-shop-source', {
      "type": "geojson",
      "data": {
