
<!-- main bg, only show when item exists -->
<% if !flows.nil? %>
    <section class="bg-white p-2 rounded-md shadow-md w-[368px] mt-2">
        <% if flows.length > 0 %>
            <% flows.each do |flow| %>
                <div class="p-2 rounded-md hover:bg-gray-100 hover:cursor-pointer">
                <!-- search result -->
                    <div class="flex items-center">
                        <i class="fa-solid fa-water text-blue-600 mr-2"></i>
                        <p class="text-sm mr-2"><%= flow.name %></p>
                        <p class="text-sm text-gray-500 mr-1"><%= flow.stream %></p>
                        <p class="text-xw text-gray-500"><%= flow.location %>, <%= flow.state %></p>
                    </div>
                </div>
            <% end %>
        <% else %>
            <p class="text-sm text-gray-500">No results found</p>
        <% end %>
    </section>
<% end %>