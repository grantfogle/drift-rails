<%= form_with(url: flows_path, method: "get", local: true) do |form| %>
    <div class="relative">
        <%= form.text_field :query,
            value: params[:query],
            data: { reflex: "input->FlowSearchReflex#map_search" },
            placeholder: "Search",
            class: "w-[300px] text-sm pl-8 pr-2 py-2 border-2 border-gray-200 rounded-lg bg-gray-50 focus:outline-none" 
            %>
            <i class="fa-solid fa-search absolute left-2 top-1/2 transform -translate-y-1/2"></i>
    </div>
<% end %>

<section class="map-search-table" id="map-search-results-table">
    <!-- main bg, only show when item exists -->
    <% if !@flows.nil? %>
        <% @flows.each do |flow| %>
            <div class="bg-white p-2 mt-2 rounded-md">
            <!-- search result -->
            <div class="flex items-center">
                <i class="fa-solid fa-water text-blue-600 mr-2"></i>
                <p class="text-sm mr-2">Colorado River</p>
                <p class="text-sm text-gray-500">Kremmling, CO</p>
            </div>
        <% end %>
    <% end %>
</section>

